<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">

    <com.badoualy.stepperindicator.StepperIndicator
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:stpi_stepCount="3" android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="58dp"
            android:id="@+id/id_stepper" android:layout_alignParentEnd="true" android:layout_alignParentStart="true"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/id_nextButton"
            android:layout_marginTop="380dp" android:layout_below="@+id/id_stepper" android:layout_alignParentEnd="true"
            android:layout_marginEnd="110dp"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/id_backButton"
            android:layout_marginStart="110dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="380dp" android:layout_below="@+id/id_stepper"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/id_stepper"
            android:layout_marginTop="50dp" android:id="@+id/id_constraintLayout">
        <!--<fragment
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:name="edu.uco.ychong.steppertest.view.fragments.FeelingsFragment"
                android:id="@+id/id_fragment" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>-->
    </android.support.constraint.ConstraintLayout>


</RelativeLayout>